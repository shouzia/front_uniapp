<view class="content"><view class="row b-b"><text class="tit">联系人</text><input class="input" type="text" placeholder="收货人姓名" placeholder-class="placeholder" data-event-opts="{{[['input',[['__set_model',['$0','addressName','$event',[]],['addressData']]]]]}}" value="{{addressData.addressName}}" bindinput="__e"/></view><view class="row b-b"><text class="tit">手机号</text><input class="input" type="number" placeholder="收货人手机号码" placeholder-class="placeholder" data-event-opts="{{[['input',[['__set_model',['$0','addressPhone','$event',[]],['addressData']]]]]}}" value="{{addressData.addressPhone}}" bindinput="__e"/></view><view class="row b-b"><text class="tit">地址</text><input class="input" placeholder="收货地址" placeholder-class="placeholder" data-event-opts="{{[['input',[['__set_model',['$0','addressDizhi','$event',[]],['addressData']]]]]}}" value="{{addressData.addressDizhi}}" bindinput="__e"/></view><view class="row default-row"><text class="tit">设为默认</text><switch checked="{{addressData.isdefaultTypes==2}}" color="#fa436a" data-event-opts="{{[['change',[['switchChange',['$event']]]]]}}" bindchange="__e"></switch></view><button data-event-opts="{{[['tap',[['confirm',['$event']]]]]}}" class="add-btn" bindtap="__e">提交</button></view>